<table>
  <thead>
    <tr>
      <th>Race Name</th>
      <th>Current Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @races.any? %>
      <% @races.each do |race| %>
        <tr>
          <td><%= race.name %></td>
          <td>
            <% if race.status == "CONFIRMED" %>
              <span>Awaiting Results</span>
            <% elsif race.status == "COMPLETED" %>
              <span>Results Recorded</span>
            <% else %>
              <span><%= race.status.titleize %></span>
            <% end %>
          </td>
          <td>
            <% if race.status == "CONFIRMED" %>
              <%= link_to 'Record Results', record_results_race_path(race), class: 'btn btn-sm btn-primary' %>
            <% elsif race.status == "COMPLETE" %>
              <%= link_to 'View Results', race_path(race) %>
            <% else%>
              <%= link_to 'Assign Students', race_path(race) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="3">No races have been created yet.</td>
      </tr>
    <% end %>
  </tbody>
</table>