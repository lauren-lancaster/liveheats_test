<%= form_with(model: student, local: true) do |form| %>
  <% if student.errors.any? %>
    <div id="error_message">
      <h2><%= pluralize(student.errors.count, "error") %> prevented this student from being saved:</h2>
      <ul>
        <% student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit "Register Student" %>
  </div>
<% end %>